<div  id="contact-form" class="overflow-hidden md:max-w-md md:mx-auto">
  <div>
    <h2>Send us a message</h2>
  </div>

  <form action="https://formspree.io/mknqeplz" method="POST">
    <div class="">
      <div class="mb-4">
        <label for="full_name" class="sr-only">Name</label>
        <div class="relative">
          <input id="full_name" class="rounded block w-full py-2 px-4 transition ease-in-out duration-150 border-2 border-blue-200 placeholder-black" placeholder="Your Name" />
        </div>
      </div>
      <div class="mb-4">
        <label for="email" class="sr-only">Email</label>
        <div class="relative">
          <input name="_replyto" id="email" type="email" class="rounded block w-full py-2 px-4 transition ease-in-out duration-150 border-2 border-blue-200 placeholder-black" placeholder="Email" />
        </div>
      </div>
      <div class="mb-4">
        <label for="phone" class="sr-only">Phone</label>
        <div class="relative">
          <input id="phone" class="rounded block w-full py-2 px-4 transition ease-in-out duration-150 border-2 border-blue-200 placeholder-black" placeholder="Phone" />
        </div>
      </div>
      <div class="mb-4">
        <label for="message" class="sr-only">Message</label>
        <div class="relative">
          <textarea id="message" rows="4" class="rounded block w-full py-2 px-4 transition ease-in-out duration-150 border-2 border-blue-200 placeholder-black" placeholder="Message"></textarea>
        </div>
      </div>
    </div>
    <div>
      <button type="submit" class="rounded font-heading font-semibold w-full block py-2 px-6 border border-transparent text-white bg-blue-200 hover:bg-blue-100 focus:border-indigo-700 active:bg-blue-100 transition duration-150 ease-in-out">
        Send Enquiry
      </button>
    </div>
  </form>
</div>