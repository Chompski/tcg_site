<main id="main" class="main flex flex-1 flex-col focus:outline-none" tabindex="-1">
  <div class="inner pt-20">

    <div class="my-24">
      <h1 class="text-center">Contact Us</h1>
    </div>

    <div class="flex flex-col md:flex-row">

      <div class="md:w-1/2 mb-24 md:mb-0">
        <div class="md:max-w-sm md:mx-auto">
          <h2 class="">
            Get in touch
          </h2>
          <p class="md:max-w-xs mb-6">
            Nullam risus blandit ac aliquam justo ipsum. Quam mauris volutpat massa dictumst amet. Sapien tortor lacus arcu.
          </p>
          <dl>
            <div>
              <dt class="sr-only">Postal address
              </dt>
              <dd>
                <p>{{ site.address.street }}</p>
                <p>{{ site.address.street_2 }}</p>
                <p>{{ site.address.city }}</p>
                <p>{{ site.address.postcode }}</p>
              </dd>
            </div>
            <div class="mt-6">
              <dt class="sr-only">Phone number
              </dt>
              <dd class="flex mb-4">
                <svg class="flex-shrink-0 h-6 w-6 text-grey-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
                <span class="ml-3 text-blue-200 font-semibold">{{ site.contact.phone }}</span>
              </dd>
            </div>
            <div class="mt-3">
              <dt class="sr-only">Email
              </dt>
              <dd class="flex">
                <svg class="flex-shrink-0 h-6 w-6 text-grey-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                <span class="ml-3 text-blue-200 font-semibold">{{ site.contact.email }}</span>
              </dd>
            </div>
          </dl>
        </div>
      </div>

      <div class="md:w-1/2">
        {% include "components/contact/contact-form.njk" %}
      </div>
    </div>

    <div class="mt-24 mb:mt-0">
      <h2>Where we're based</h2>
      {% include "components/map.njk" %}
    </div>
  </div>
  
  
