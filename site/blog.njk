---
layout: default
meta_title: Blog
meta_description: Blog page description
body_class: blog
title: Blog
---

<main id="main" class="main inner flex flex-1 flex-col pt-20 mt-10 focus:outline-none" tabindex="-1">

  <div class="mb-16">
    <h1 class="mb-0 text-4xl leading-5xl md:text-5xl">The Coders Guid Blog</h1>
  </div>

  <div class="flex flex-wrap md:flex-row flex-col max-w-full mx-auto lg:max-w-none mb:mb-12 mb-20">
    {% for post in collections.blog %}
      <div class="md:w-1/2 lg:w-1/3 md:px-3 w-full mb-8 sm:mb-10 md:mb-10">
        <div class="flex flex-col rounded-lg shadow-primary overflow-hidden md:h-full" data-post>
          {% if post.data.featured_image %}
            <div class="flex-shrink-0">
              <img class="h-56 w-full object-cover" data-lazy="{{ post.data.featured_image }}" alt="{{ post.data.featured_image_alt }}" />
            </div>
          {% endif %}
          <div class="flex-1 bg-white px-4 md:px-6 py-6 flex flex-col justify-between relative">
            <div class="flex-1 mt-2">
              {% if post.data.tags %}
                <div class="category absolute top-0 flex -my-4 -mx-1">
                  {% for item in post.data.tags %}
                    {% if item != "blog" %}
                      <div class="px-1">
                        <a href="/category/{{ item }}" class="p-2 bg-red-100 text-white font-bold rounded block font-heading text-sm leading-sm">{{ item | capitalize }}</a>
                      </div>
                    {% endif %}
                  {% endfor %}
                  </div>
              {% endif %}
              <a href="#" class="block">
                <a href="{{ post.url }}" class="block"><h3 class="text-blue-200 max-w-90 mb-4">{{ post.data.title }}</h3></a>
                <p class="mb-6 sm:mb-4 text-sm leading-md">{{ post.data.excerpt }}</p>
              </a>
            </div>
            <div class="flex">
              <div class="mr-2 w-10">
                <img src="../../images/blog/{{post.data.avatar}}" alt="{{post.data.avatar.alt}}" class="w-full object-cover rounded-50 block" />
              </div>

              <div class="my-auto">
                <p class="time text-blue-200 font-bold font-heading mb-1 text-md sm:text-sm leading-sm">{{ post.data.time }} read time</p>
                
                <div class="">
                    <p class="author text-black text-sm leading-sm sm:text-xs sm:leading-xs">
                      By {{ post.data.author }}
                      <span class="text-black text-sm leading-sm sm:text-xs sm:leading-xs my-auto">&#8210;</span>
                      <time datetime="{{ post.data.date }}" class="text-black text-sm leading-sm sm:text-xs sm:leading-xs my-auto">
                        {{ post.data.date | dateDisplay }}
                      </time>
                    </p>
                  </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
    <div class="w-full mt-2">
      <button id="load-more" class="block mx-auto bg-blue-200 text-sm leading-sm text-white text-center font-heading font-bold rounded px-3 py-2">Load more articles</button>
    </div>

  </div>
</main>


